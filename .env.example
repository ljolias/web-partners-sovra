# Upstash Redis
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Anthropic API (for Sales Copilot)
ANTHROPIC_API_KEY=sk-ant-your-api-key

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your-session-secret-here

# SovraID Integration (Verifiable Credentials)
# Get these from https://id.sandbox.sovra.io/ after creating a workspace
SOVRAID_API_URL=https://id.api.sandbox.sovra.io/api
SOVRAID_API_KEY=your-sovraid-api-key
SOVRAID_WORKSPACE_ID=your-workspace-id
# Optional: Webhook secret for validating incoming webhooks
SOVRAID_WEBHOOK_SECRET=your-webhook-secret
