# Upstash Redis
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# Anthropic API (for Sales Copilot)
ANTHROPIC_API_KEY=sk-ant-your-api-key

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your-session-secret-here

# SovraID Integration (Verifiable Credentials)
# Get these from https://id.sandbox.sovra.io/ after creating a workspace
SOVRAID_API_URL=https://id.api.sandbox.sovra.io/api
SOVRAID_API_KEY=your-sovraid-api-key
SOVRAID_WORKSPACE_ID=your-workspace-id
# Optional: Webhook secret for validating incoming webhooks
SOVRAID_WEBHOOK_SECRET=your-webhook-secret

# App Configuration
NEXT_PUBLIC_APP_URL=https://partners.sovra.io

# CORS Configuration
# Comma-separated list of additional allowed origins for cross-origin requests
# Example: CORS_ALLOWED_ORIGINS=https://app1.example.com,https://app2.example.com
CORS_ALLOWED_ORIGINS=

# Security Features
# Set to 'false' to disable specific security features (not recommended for production)
ENFORCE_CERTIFICATION=true
ENFORCE_LEGAL_DOCS=true
ENABLE_RATE_LIMITING=true
ENABLE_CORS=true
ENABLE_XSS_PROTECTION=true

# Trusted Proxies
# Comma-separated list of trusted proxy IPs for accurate client IP extraction
# Example: TRUSTED_PROXIES=10.0.0.1,10.0.0.2
TRUSTED_PROXIES=
